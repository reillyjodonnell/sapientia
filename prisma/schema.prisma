// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  createdAt    DateTime  @default(now())
  username     String    @unique
  passwordHash String
  posts        Post[]
  likes        Like[]
  dislikes     Dislike[]

  // liked        Post[]   @relation("likedPosts", references: [id])
  // disliked     Post[]   @relation("dislikedPosts", references: [id])

}

model Like {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId String
  postId String
  post   Post   @relation(fields: [postId], references: [id])

}

model Dislike {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId String
  postId String
  post   Post   @relation(fields: [postId], references: [id])

}

model Author {
  id         String @id @default(uuid())
  twitterUrl String
  blogUrl    String
  // articles   Post[]
}

model Post {
  id            String    @id @default(uuid())
  postedBy      User      @relation(fields: [posterId], references: [id], onDelete: Cascade)
  posterId      String
  // authorOfPost Author   @relation(fields: [authorId], references: [id])
  authorOfPost  String
  authorTwitter String?
  title         String
  url           String
  points        Int?      @default(0)
  topic         Topic[]
  likes         Like[]
  dislikes      Dislike[]

  // likedBy       User[]  @relation(name: "likedUser", references: [id])
  // dislikedBy    User[]  @relation(name: "dislikedUser", references: [id])
}

model Topic {
  id    Int    @id @default(autoincrement())
  name  String
  posts Post[]
}
